<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <%= simple_form_for(restaurant, html: { class: 'input-group' }) do |f| %>
      <%= f.input :name, label: 'The restaurant name :' %>
      <%= f.input :address, label: 'The address :' %>
      <%= f.input :category, label: 'Type of food :' %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

